{
  "name": "damasdev/codeigniter",
  "type": "project",
  "description": "Better Codeigniter Framework",
  "require": {
    "php": ">=7.4.0",
    "codeigniter/framework": "3.1.*",
    "twig/twig": "^3.0",
    "vlucas/phpdotenv": "^5.4",
    "guzzlehttp/guzzle": "^7.4",
    "firebase/php-jwt": "^6.1"
  },
  "scripts": {
    "matches": "php public/index.php matches",
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
