{% extends 'layouts/app.twig' %}

{% block header %}
	<div class="row align-items-center">
		<div class="col">
			<div class="page-pretitle">
				<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
					<li class="breadcrumb-item">
						<a href="{{ base_url('/') }}">Home</a>
					</li>
					<li class="breadcrumb-item">
						<a href="{{ base_url('/user') }}">User</a>
					</li>
				</ol>
			</div>
			<h2 class="page-title">
				{{ title | default('Edit') }}
			</h2>
		</div>
		<div class="col-auto ms-auto d-print-none">
			<div class="btn-list">
				<a href="{{ base_url('user') }}" class="btn d-none d-sm-inline-block">
					<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
						<desc>Download more icon variants from https://tabler-icons.io/i/arrow-left</desc>
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<line x1="5" y1="12" x2="19" y2="12"></line>
						<line x1="5" y1="12" x2="11" y2="18"></line>
						<line x1="5" y1="12" x2="11" y2="6"></line>
					</svg>
					Back
				</a>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<form id="form" method="post" class="card">
		<div class="card-body">
			<div class="form-group mb-3">
				<label for="name">Name</label>
				<input type="text" class="form-control" name="name" id="name" placeholder="Name" value="{{ user.name }}">
			</div>
			<div class="form-group mb-3">
				<label for="email">Email</label>
				<input type="email" class="form-control" name="email" id="email" placeholder="Email" value="{{ user.email }}">
			</div>
			<div class="form-group mb-3">
				<label for="password">Password</label>
				<input type="password" class="form-control" name="password" id="password" placeholder="Password">
			</div>

			<div class="form-group mb-3">
				<label for="role">Role</label>
				<select class="form-select" name="role_id" id="role">
					{% for role in roles %}
						<option value="{{role.id}}" {% if role.id is same as (user.role_id) %} selected {% endif %}>
							{{role.name}}
						</option>
					{% endfor %}
				</select>
			</div>

			<input type="hidden" name="user_id" id="user_id" value="{{ user.id }}">
		</div>
		<div class="card-footer">
			<button id="submit" class="btn btn-primary" type="button">
				Submit
			</button>
		</div>
	</form>
{% endblock %}

{% block scripts %}
	<script src="{{ base_url ('/js/modules/user/edit-user.js')}}"></script>
{% endblock %}
