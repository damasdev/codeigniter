{% extends 'layouts/app.twig' %}

{% block header %}
	<div class="row align-items-center">
		<div class="col">
			<div class="page-pretitle">
				<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
					<li class="breadcrumb-item">
						<a href="/">Home</a>
					</li>
					<li class="breadcrumb-item">
						<a href="/role">Role</a>
					</li>
				</ol>
			</div>
			<h2 class="page-title">Role</h2>
		</div>
		<div class="col-auto ms-auto d-print-none">
			<div class="btn-list">
				<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#createRole" role="button" aria-controls="createRole">
					<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<line x1="12" y1="5" x2="12" y2="19"></line>
						<line x1="5" y1="12" x2="19" y2="12"></line>
					</svg>
					Create
				</a>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="table-responsive">
			<table class="table table-vcenter card-table table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Description</th>
						<th class="w-25">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for role in roles %}
						<tr>
							<td class="text-muted">{{ role.id | capitalize }}</td>
							<td class="text-muted">{{ role.name | capitalize }}</td>
							<td class="text-muted">{{ role.description }}</td>
							<td class="text-muted">
								<a href="#" class="text-primary">
									<i class="ti ti-edit"></i>
									Edit
								</a>
								|
								<a href="#" class="text-danger">
									<i class="ti ti-trash"></i>
									Delete
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<div class="offcanvas offcanvas-end" tabindex="-1" id="createRole" aria-labelledby="canvasLabel">
		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="canvasLabel">Create Role</h2>
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		{{ form_open ('role') }}
		<div class="offcanvas-body">
			<div>
				<div class="form-group mb-3">
					<label for="name">Name</label>
					<input type="text" class="form-control" name="name" id="name" placeholder="Name">
				</div>
				<div class="form-group mb-3">
					<label for="description">Description</label>
					<input type="text" class="form-control" name="description" id="description" placeholder="Description">
				</div>
			</div>
			<div class="mt-3">
				<button class="btn btn-primary" type="submit" data-bs-dismiss="offcanvas">
					Submit
				</button>
			</div>
		</div>
		{{ form_close }}
	</div>
{% endblock %}
