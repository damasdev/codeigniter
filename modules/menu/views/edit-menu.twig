{% extends 'layouts/app-vertical.twig' %}

{% block header %}
	<div class="row align-items-center">
		<div class="col">
			<div class="page-pretitle">
				<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
					<li class="breadcrumb-item">
						<a href="{{ base_url('/') }}">Home</a>
					</li>
					<li class="breadcrumb-item">
						<a href="{{ base_url('menu') }}">Menu</a>
					</li>
				</ol>
			</div>
			<h2 class="page-title">
				{{ title | default('Edit') }}
			</h2>
		</div>
		<div class="col-auto ms-auto d-print-none">
			<div class="btn-list">
				<a href="{{ base_url('menu') }}" class="btn d-none d-sm-inline-block">
					<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
						<desc>Download more icon variants from https://tabler-icons.io/i/arrow-left</desc>
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<line x1="5" y1="12" x2="19" y2="12"></line>
						<line x1="5" y1="12" x2="11" y2="18"></line>
						<line x1="5" y1="12" x2="11" y2="6"></line>
					</svg>
					Back
				</a>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<form id="form" class="card">
		<div class="card-body">
			<div class="form-group mb-3">
				<label for="name">Name</label>
				<input type="text" class="form-control" name="name" id="name" placeholder="Name" value="{{ menu.name }}">
			</div>
			<div class="form-group mb-3">
				<label for="slug">Slug</label>
				<input type="text" class="form-control" name="slug" id="slug" placeholder="Slug" value="{{ menu.slug }}">
			</div>
			<div class="form-group mb-3">
				<label for="icon">Icon</label>
				<input type="text" class="form-control" name="icon" id="icon" placeholder="Icon" value="{{ menu.icon }}">
			</div>
			<div class="form-group mb-3">
				<label for="parent">Parent Menu</label>
				<select class="form-select select2" name="parent" id="parent">
					<option value="">-</option>
					{% for parent in parents %}
						<option value="{{parent.id}}" {% if parent.id is same as (menu.parent) %}
							selected
						{% endif %}>{{parent.name}}</option>
					{% endfor %}
				</select>
			</div>
			<input type="hidden" name="menu_id" id="menu_id" value="{{ menu.id }}">
		</div>
		<div class="card-footer">
			<button id="submit" class="btn btn-primary" type="button">
				Submit
			</button>
		</div>
	</form>
{% endblock %}

{% block scripts %}
	<script src="{{ base_url ('/js/modules/menu/edit-menu.js')}}"></script>
{% endblock %}
