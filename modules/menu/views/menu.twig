{% extends 'layouts/app-vertical.twig' %}

{% block header %}
	<div class="row align-items-center">
		<div class="col">
			<div class="page-pretitle">
				<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
					<li class="breadcrumb-item">
						<a href="{{ base_url('/') }}">Home</a>
					</li>
					<li class="breadcrumb-item">
						<a href="{{ base_url('menu') }}">Menu</a>
					</li>
				</ol>
			</div>
			<h2 class="page-title">
				{{ title | default('Menu') }}
			</h2>
		</div>
		<div class="col-auto ms-auto d-print-none">
			<div class="btn-list">
				<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#createMenu" menu="button" aria-controls="createMenu">
					<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<line x1="12" y1="5" x2="12" y2="19"></line>
						<line x1="5" y1="12" x2="19" y2="12"></line>
					</svg>
					Create
				</a>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<table class="table" id="menu">
				<thead>
					<tr>
						<th>Name</th>
						<th>Slug</th>
						<th>Icon</th>
						<th>Action</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>

	<div class="offcanvas offcanvas-end" tabindex="-1" id="createMenu" aria-labelledby="canvasLabel">
		<div class="offcanvas-header">
			<h2 class="offcanvas-title" id="canvasLabel">Create Menu</h2>
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<form id="form">
			<div class="offcanvas-body">
				<div>
					<div class="form-group mb-3">
						<label for="name">Name</label>
						<input type="text" class="form-control" name="name" id="name" placeholder="Name">
					</div>
					<div class="form-group mb-3">
						<label for="slug">Slug</label>
						<input type="text" class="form-control" name="slug" id="slug" placeholder="Slug">
					</div>
					<div class="form-group mb-3">
						<label for="icon">Icon</label>
						<input type="text" class="form-control" name="icon" id="icon" placeholder="Icon">
					</div>
					<div class="form-group mb-3">
						<label for="parent">Parent Menu</label>
						<select class="form-select select2" name="parent" id="parent">
							<option value="">-</option>
							{% for parent in parents %}
								<option value="{{parent.id}}">{{parent.name}}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<div class="mt-3">
					<button class="btn btn-primary" id="submit" type="button" data-bs-dismiss="offcanvas">
						Submit
					</button>
				</div>
			</div>
		</form>
	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ base_url ('/vendor/datatables/js/datatables.min.js')}}"></script>
	<script src="{{ base_url ('/js/modules/menu/menu.js')}}"></script>
{% endblock %}

{% block styles %}
	<link rel="stylesheet" href="{{ base_url ('/vendor/datatables/css/datatables.min.css')}}">
{% endblock %}

